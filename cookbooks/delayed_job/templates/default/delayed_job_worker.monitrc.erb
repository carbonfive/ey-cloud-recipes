check process <%= @worker_name %>
  with pidfile /data/<%= @app_name %>/shared/pids/<%= @worker_name %>.pid
  start program = "/bin/su -c '/data/<%= @app_name %>/current/script/delayed_job start -- <%= @framework_env %>' - <%= @user %>"
  stop program = "/bin/su -c '/data/<%= @app_name %>/current/script/delayed_job stop -- <%= @framework_env %>' - <%= @user %>"
  group <%= @app_name %>_jobs